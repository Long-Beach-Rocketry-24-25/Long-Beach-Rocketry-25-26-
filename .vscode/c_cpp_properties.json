{
    "configurations": [
        {
            "name": "Mac",
            "includePath": [
                "${workspaceFolder}/**",
                "mcu_support/stm32/l4xx", //need to do this or there will be intellisense include errors
                "mcu_support/stm32/l4xx/HAL"
                // "mcu_support/stm32/f7xx",
                // "mcu_support/stm32/h5xx",
                // "mcu_support/stm32/f7xx/HAL",
            ],
            "defines": [
                "USE_HAL_DRIVER",
                "STM32L476xx", //enables HAL and CMSIS headers to show dev specific registers for intellisense
                "STM32F746xx",
                "STM32H503xx"
            ],
            "macFrameworkPath": [
                "/Library/Developer/CommandLineTools/SDKs/MacOSX.sdk/System/Library/Frameworks"
            ],
            "compilerPath": "/usr/bin/clang",
            "cStandard": "c17",
            "cppStandard": "c++17",
            "intelliSenseMode": "macos-clang-arm64"
        }
    ],
    "version": 4
}